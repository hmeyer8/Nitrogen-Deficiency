TARGET_CROP=corn
S2_SOURCE=pc
TARGET_MODE=deficit_score      # use ndre if you prefer raw NDRE regression
MAX_TILES=2000
MIN_CLEAR_RATIO=0.1
STABLE_THRESHOLD=0.2
NDRE_DEFICIT_Q=50              # starting quantile for labels; code will adjust if too imbalanced
GPU_ENABLED=true               # set false if no GPU
PC_CHUNK_SIZE=256
PC_STORE_WORKERS=1

# Optional: override Copernicus Data Space endpoints (defaults are set in code)
# CDSE_BASE_URL=https://sh.dataspace.copernicus.eu
# CDSE_AUTH_BASE_URL=https://identity.dataspace.copernicus.eu/auth/realms/CDSE/protocol/openid-connect
# CDSE_TOKEN_URL=https://identity.dataspace.copernicus.eu/auth/realms/CDSE/protocol/openid-connect/token

# data paths (repo-relative)
DATA_DIR=./data
SENTINEL_DIR=./data/raw/sentinel
CDL_DIR=./data/raw/cdl
